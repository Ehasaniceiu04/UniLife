            <GridColumn Field=@nameof(OgrenimDurumDto.Kod) HeaderText="Kod"></GridColumn>
            <GridColumn Field=@nameof(OgrenimDurumDto.Aktif) DisplayAsCheckBox="true" HeaderText="Öğr. Aktiflik Durum"></GridColumn>
