            <GridEvents OnActionComplete="ActionCompletedHandler" TValue="HarcDto"></GridEvents>
            <GridEditSettings ShowDeleteConfirmDialog="true" AllowAdding="true" AllowDeleting="true" AllowEditing="true" Mode="EditMode.Dialog"></GridEditSettings>
            <GridColumns>
                <GridColumn Visible="false" Field=@nameof(HarcDto.Id) HeaderText="Harc ID" AllowEditing="false" AllowAdding="false" AllowEditing="false" IsIdentity="true" IsPrimaryKey="true" TextAlign="TextAlign.Left" Width="140"></GridColumn>
                <GridColumn Field=@nameof(HarcDto.Ad) HeaderText="Harc İsim" ValidationRules="@(new ValidationRules{ Required=true})" Width="170"></GridColumn>
