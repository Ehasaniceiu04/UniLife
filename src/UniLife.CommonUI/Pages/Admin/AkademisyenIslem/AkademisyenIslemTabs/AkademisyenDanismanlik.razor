            </GridCommandColumns>
        </GridColumn>
    </GridColumns>
</SfGrid>

@code{

    [Parameter]
    public AkademisyenDto _AkademisyenDto { get; set; } = new AkademisyenDto();

    private List<Object> Toolbaritems = new List<Object>() { "ExcelExport", "CsvExport", "PdfExport" };


