            <ScheduleViews>
                <ScheduleView Option="View.TimelineDay">
                    <ScheduleViewTimeScale SlotCount="1" Interval="60"></ScheduleViewTimeScale>
                </ScheduleView>
                <ScheduleView Option="View.TimelineWeek">
                    <ScheduleViewTimeScale SlotCount="1" Interval="60"></ScheduleViewTimeScale>
                </ScheduleView>
