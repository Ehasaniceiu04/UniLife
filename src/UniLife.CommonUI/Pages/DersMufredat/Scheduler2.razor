@page "/scheduler2"
@using Syncfusion.Blazor.Schedule
@using UniLife.Shared.Dto.Definitions

<div class="control-section">
    <div class="content-wrapper">
        <SfSchedule TValue="DerslikRezervDto" Width="100%" Height="650px" SelectedDate="@(new DateTime(2020, 1, 1))" CurrentView="View.TimelineWeek">
