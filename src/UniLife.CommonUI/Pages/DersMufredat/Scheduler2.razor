                        <div class="room-type">@(((context as DerslikRezervDto).ResourceData as DerslikDto).Capacity)</div>
                        <div class="room-capacity">@(((context as DerslikRezervDto).ResourceData as DerslikDto).Type)</div>
                    </div>
                </ResourceHeaderTemplate>
            </ScheduleTemplates>
            @*<ScheduleEvents TValue="DerslikRezervDto" ActionCompleted="OnActionCompleted"></ScheduleEvents>*@
            <ScheduleEventSettings DataSource="@derslikRezervDtos">
