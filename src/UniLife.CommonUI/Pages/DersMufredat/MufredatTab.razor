@code{

    SfTab Tab;

    public void TabDegis(int tabIndex)
    {
        Tab.EnableTab(0, true);
        Tab.EnableTab(1, tabIndex>0);
        Tab.Select(tabIndex);
    }

    public void TabCreate()
    {
        Tab.EnableTab(0, true);
        Tab.EnableTab(1, false);
    }

    //public void OnTabSelected(SelectEventArgs args)
