@code {
    private SfUploader uploderObj;
    private object selectedFile { get; set; }
    List<fileInfo> files = new List<fileInfo>();



    public class fileInfo
    {
        public string Path { get; set; }
        public string Name { get; set; }
        public double Size { get; set; }
    }

    public void onChange(UploadChangeEventArgs args)
    {
        files = new List<fileInfo>();
        foreach (var file in args.Files)
        {

            var path = @"../UniLife.CommonUI/wwwroot/images/ogrenci/" + file.FileInfo.Name;
            FileStream filestream = new FileStream(path, FileMode.Create, FileAccess.Write);
            file.Stream.WriteTo(filestream);
            filestream.Close();
            file.Stream.Close();

            files.Add(new fileInfo() { Path = $"/_content/UniLife.CommonUI/images/ogrenci/" + file.FileInfo.Name, Name = file.FileInfo.Name, Size = file.FileInfo.Size });
        }
    }
    public void onRemove(RemovingEventArgs args)
    {
        foreach (var removeFile in args.FilesData)
        {
            if (File.Exists(Path.Combine(@"../UniLife.CommonUI/wwwroot/images/ogrenci/", removeFile.Name)))
            {
                File.Delete(Path.Combine(@"../UniLife.CommonUI/wwwroot/images/ogrenci/", removeFile.Name));
            }
        }
    }

    public void uploadFile(MouseEventArgs args)
    {
        this.uploderObj.Upload(selectedFile);
    }
}

